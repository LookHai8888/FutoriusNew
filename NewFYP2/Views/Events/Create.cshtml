@model NewFYP2.Models.Event

@{
    ViewData["Title"] = "Create";
}
    
<br />
<h2 class="text-info">Create Event</h2>
<br />

<div class="border container " style="padding:30px;">
    <form asp-action="Create">
        <div class="text-danger" asp-validation-summary="ModelOnly"></div>

        <div class="form-group row" style="margin-bottom: 10px;">
            <div class="col-3" style="margin-top: 5px;">
                <label asp-for="EventName" class="control-label">Event Name</label>
            </div>
            <div class="col-6">
                <input asp-for="EventName" class="form-control" />
            </div>
            <span asp-validation-for="EventName" class="text-danger"></span>
        </div>

        <div class="form-group row" style="margin-bottom: 10px;">
            <div class="col-3" style="margin-top: 5px;">
                <label asp-for="Date" class="control-label"></label>
            </div>
            <div class="col-6">
                <input asp-for="Date" class="form-control" />
            </div>
            <span asp-validation-for="Date" class="text-danger"></span>
        </div>

        <div class="form-group row" style="margin-bottom: 10px;">
            <div class="col-3" style="margin-top: 5px;">
                <label asp-for="Time" class="control-label"></label>
            </div>
            <div class="col-6">
                <input asp-for="Time" class="form-control" />
            </div>
            <span asp-validation-for="Time" class="text-danger"></span>
        </div>

        <div class="form-group row" style="margin-bottom: 10px;">
            <div class="col-3" style="margin-top: 5px;">
                <label asp-for="Venue" class="control-label"></label>
            </div>
            <div class="col-6">
                <input asp-for="Venue" class="form-control" />
            </div>
            <span asp-validation-for="Venue" class="text-danger"></span>
        </div>

        <div class="form-group row" style="margin-bottom: 10px;">
            <div class="col-3" style="margin-top: 5px;">
                <label asp-for="OrganizerName" class="control-label">Organizer Name</label>
            </div>
            <div class="col-6">
                <input asp-for="OrganizerName" class="form-control" />
            </div>
            <span asp-validation-for="OrganizerName" class="text-danger"></span>
        </div>

        <div class="form-group row" style="margin-bottom: 10px;">
            <div class="col-3" style="margin-top: 5px;">
                <label asp-for="OrganizerEmail" class="control-label">Organizer Email</label>
            </div>
            <div class="col-6">
                <input asp-for="OrganizerEmail" class="form-control" />
            </div>
            <span asp-validation-for="OrganizerEmail" class="text-danger"></span>
        </div>

        <div class="form-group row" style="margin-bottom: 10px;">
            <div class="col-3" style="margin-top: 5px;">
                <label asp-for="OrganizerPhoneNo" class="control-label">Organizer Contact No.</label>
            </div>
            <div class="col-6">
                <input asp-for="OrganizerPhoneNo" class="form-control" />
            </div>
            <span asp-validation-for="OrganizerPhoneNo" class="text-danger"></span>
        </div>

        <div class="form-group row" style="margin-bottom: 20px;">
            <div class="col-3" style="margin-top: 5px;">
                <label asp-for="EventDescription" class="control-label">Event Description</label>
            </div>
            <div class="col-6">
                <input asp-for="EventDescription" class="form-control" />
            </div>
            <span asp-validation-for="EventDescription" class="text-danger"></span>
        </div>

    
        <div class="form-group row">
            <div class="col-3 offset-3">
                <button type="submit" class="btn btn-primary form-control">Create</button>
            </div>
            <div class="col-3">
                <a asp-action="Index" class="btn btn-success form-control">Back To List</a>
            </div>

        </div>

    </form>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}

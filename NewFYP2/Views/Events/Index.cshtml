@model IEnumerable<NewFYP2.Models.Event>

@{
    ViewData["Title"] = "Index";
}





<br />

@*//padding zero, margin zero*@
<div class="container row p-0 m-0">
    @*//separate into 2 column(first column will occupy 10 space, second column will occupy 2 space)*@
    <div class="col-9">
        <h2 class="text-info">Event List</h2>
    </div>
    <div class="col-3">
        @*//asp-page tag helperwill redirect user to the "Create page"*@
        <a asp-action="Create" class="btn btn-info form-control text-white"><i class="bi bi-pencil-square"></i>&nbsp;&nbsp;&nbsp;Create New Event</a>
    </div>

    <br /><br /><br /><br />

    <div class="col-12 border p-3">

        <table class="table table-striped table-bordered" style="width:100%">
            <thead>
                <tr class="table-primary">
                    <th class="text-warning">
                        @Html.DisplayNameFor(model => model.EventName)
                    </th>
                    <th class="text-warning">
                        @Html.DisplayNameFor(model => model.Date)
                    </th>
                    <th class="text-warning">
                        @Html.DisplayNameFor(model => model.Time)
                    </th>
                    <th class="text-warning">
                        @Html.DisplayNameFor(model => model.Venue)
                    </th>
                    <th class="text-warning">
                        @Html.DisplayNameFor(model => model.EventDescription)
                    </th>
                    <th></th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td width="20%">
                            @Html.DisplayFor(modelItem => item.EventName)
                        </td>
                        <td width="10%">
                            @Html.DisplayFor(modelItem => item.Date)
                        </td>
                        <td width="10%">
                            @Html.DisplayFor(modelItem => item.Time)
                        </td>
                        <td width="15%">
                            @Html.DisplayFor(modelItem => item.Venue)
                        </td>
                        <td width="30%">
                            @Html.DisplayFor(modelItem => item.EventDescription)
                        </td>
                        <td width="15%" align="left">
                            <div class="w-75 btn-group" role="group">

                                <a asp-action="Edit" asp-route-id="@item.EventID" class="btn btn-primary mx-2">
                                    <i class="bi bi-pencil-square"></i>
                                </a>

                                <a asp-action="Delete" asp-route-id="@item.EventID" class="btn btn-danger mx-2">
                                    <i class="bi bi-trash-fill"></i>
                                </a>

                                <a asp-action="Details" asp-route-id="@item.EventID" class="btn btn-success mx-2">
                                    <i class="bi bi-three-dots"></i>
                                </a>

                                <a asp-action="Send" asp-route-id="@item.EventID" class="btn btn-success mx-2">
                                    Send
                                </a>

                            </div>

                        </td>
                    </tr>
                }
            </tbody>
        </table>

    </div>


